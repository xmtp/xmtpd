{
  "go.lintTool": "golangci-lint-v2",
  "go.lintFlags": ["--path-mode=abs", "--fast-only"],
  "go.formatTool": "custom",
  "go.alternateTools": {
    "customFormatter": "golangci-lint-v2"
  },
  "go.formatFlags": ["fmt", "--stdin"],
  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools",
    "editor.formatOnSave": true
  },
  "go.useLanguageServer": true,
  "sqltools.highlightQuery": false,
  "sqltools.format": {
    "linesBetweenQueries": 2,
    "language": "sql",
    "reservedWordCase": "upper",
    "typeCase": "upper"
  },
  // Instructions from https://github.com/segmentio/golines
  "emeraldwalk.runonsave": {
    "shell": "bash",
    "commands": [
      {
        "match": "\\.go$",
        "cmd": "golines ${file} -w"
      }
    ]
  },
  "solidity.compileUsingRemoteVersion": "v0.8.28",
  "solidity.formatter": "forge",
  "wake.compiler.solc.remappings": []
}
